<section class='feed'>
  <section class='page-title'>
    <h1>Featured Article</h1>
  </section>
  <section class='featured'>
    <article class='post-preview jumbotron'>
      <section class='post-thumbnail'>
        <%= link_to image_tag(@featured.thumbnail, class: 'post-thumbnail-img'), 'news/' + @featured.id.to_s %>
      </section>
      <section class='post-title'>
        <a href=<%= 'news/' + @featured.id.to_s %>
          <h2><strong><%= @featured.title %></strong></h2>
        </a>
      </section>
      <hr>
      <section class='post-date'>
        <p><%= @featured.display_time %></p>
      </section>
      <section class='post-body'>
        <%= @featured.summary %>
      </section>
    </article>
  </section>
  <section class='page-title'>
    <h1>Past articles</h1>
  </section>
  <% @posts.each do |post| %>
    <article class='post-preview jumbotron'>
      <section class='post-thumbnail'>
        <%= link_to image_tag(post.thumbnail, class: 'post-thumbnail-img'), 'news/' + post.id.to_s %>
      </section>
      <section class='post-title'>
        <a href=<%= 'news/' + post.id.to_s %>
          <h2><strong><%= post.title %></strong></h2>
        </a>
      </section>
      <hr>
      <section class='post-date'>
        <p><%= post.display_time %></p>
      </section>
      <section class='post-body'>
        <%= post.summary %>
      </section>
    </article>
  <% end %>
</section>
