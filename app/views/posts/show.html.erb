<section class='post'>
  <section class='title'>
    <%= @post.title %>
  </section>
  <section class='photo'>
    <%= image_tag(@post.thumbnail) %>
  </section>
  <section class='timestamp'>
    <%= @post.display_time  %>
  </section>
  <hr>
  <section class='content'>
    <%= @post.content.html_safe %>
  </section>
</section>
