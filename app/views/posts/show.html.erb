<% set_meta_tags og: {
  image: image_url(@post.display_image),
  title: @post.title,
  description: @post.summary,
  site_name: 'mrbeeken'
  } %>

<% if @post.audio %>
  <% set_meta_tags og: { audio: asset_url(@post.audio) } %>
<% end %>

<section class='post'>
  <section class='title'>
    <%= @post.title %>
  </section>
  <section class='photo'>
    <%= image_tag(@post.display_image) %>
  </section>
  <% if @post.audio %>
    <section class='audio'>
      <p>Listen to an audio recording of this article</p>
      <audio controls>
        <source src=<%= asset_path(@post.audio) %> type="audio/mpeg">
        Your browser does not support the audio element.
      </audio>
    </section>
  <% end %>
  <section class='misc-info'>
    <section class='timestamp'>
      <%= @post.display_time  %>
    </section>
    <section class='author'>
      Alex Beeken
    </section>
  </section>
  <hr>
  <section class='content'>
    <%= @post.content.html_safe %>
  </section>
  <section class='social'>
    <section class='social-button'>
      <%= facebook_button %>
    </section>
    <section class='social-button'>
      <%= linkedin_button %>
    </section>
    <section class='social-button'>
      <%= twitter_button %>
    </section>
    <section class='social-button'>
      <%= google_plus_button %>
    </section>
  </section>
  <section class='email'>
    Feel free to share your thoughts on this subject or anything else by emailing me at musiccramsessions@gmail.com.
  </section>
</section>
