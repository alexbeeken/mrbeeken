<section class='post'>
  <section class='title'>
    <%= @post.title %>
  </section>
  <section class='photo'>
    <%= image_tag(@post.thumbnail) %>
  </section>
  <section class='timestamp'>
    <%= @post.display_time  %>
  </section>
  <hr>
  <section class='content'>
    <%= @post.content.html_safe %>
  </section>
  <section class='social'>
    <section class='social-button'>
      <%= facebook_button %>
    </section>
    <section class='social-button'>
      <%= linkedin_button %>
    </section>
    <section class='social-button'>
      <%= twitter_button %>
    </section>
    <section class='social-button'>
      <%= google_plus_button %>
    </section>
  </section>
</section>
